# pnpm configuration for VirtualMeet

# Use shamefully-hoist to ensure compatibility with legacy tools
shamefully-hoist=true

# Prefer exact versions in lockfile for reproducible builds
prefer-frozen-lockfile=true

# Enable strict-peer-dependencies to catch version conflicts early
strict-peer-dependencies=true

# Use Node.js compatible modules resolution
node-linker=isolated

# Set registry to npm (can be changed to private registry if needed)
registry=https://registry.npmjs.org/

# Enable auto-install peer dependencies
auto-install-peers=true

# Set cache directory (optional, can be customized)
# cache-dir=/path/to/pnpm-cache